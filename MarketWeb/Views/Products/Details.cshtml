@model MarketWeb.Models.ViewModels.Product

@{
    ViewData["Title"] = "Details";
}

<h1>PRODUCT DETAILS</h1>

<hr />

<div>

    <hr />

    <div class="row">
        <div class="col-md-4">
            <img src="~/images/@Model.Image" style="width:260px;height:260px" />
        </div>

        <div class="col-md-4">
            <div class="row"><h1>@Model.ProductName</h1></div>
            <div class="row"><h1 style="color:red">Price: $@Model.Price</h1></div>
            <div class="row"><h3>@Html.ActionLink("Add to Cart", "OrderNow", "ShoppingCart", new { id = Model.ProductID }, null)</h3></div>
        </div>

    </div>

</div>
<hr />
<div>
    <a asp-action="Edit" asp-route-id="@Model.ProductID">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
